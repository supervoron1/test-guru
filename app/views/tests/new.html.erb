<h1>Create new test</h1>
<form action="/tests" method="post">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <input name="test[author_id]" value="4" type="hidden">
    <select name="test[category_id]" id="test-category">
        <option value="0" disabled selected>Choose category</option>
        <option value="1">Ruby</option>
        <option value="2">Rails</option>
        <option value="3">JS</option>
        <option value="4">HTML</option>
    </select>
    <p>
        <label for="test-title">Title:</label>
        <input type="text" name="test[title]" id="test-title">
    </p><br>
    <p>
        <label for="test-level">Level:</label>
        <input type="text" name="test[level]" id="test-level">
    </p><br>
    <input type="submit" value="Create">
</form>
<br>
<%= link_to 'Back', tests_path %>
